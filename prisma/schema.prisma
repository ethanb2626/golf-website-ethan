// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Booking {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  phone      String?
  lessonType String
  notes      String?
  createdAt  DateTime @default(now())
}
